<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivAuthor"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tvAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_toEndOf="@+id/ivAuthor"
                android:text="Mg Mg"
                android:textColor="#3b3939"
                android:textStyle="bold" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tvPublishedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthorName"
                android:layout_margin="@dimen/margin_medium"
                android:layout_toEndOf="@+id/ivAuthor"
                android:gravity="right"
                android:text="12/12/2018"
                android:textColor="#3b3939" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="#efeaea" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvHealthInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="title"
            android:textColor="#3b3939"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivHealthInfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvHealthInfoDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="brief"
            android:textColor="#3b3939" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvFileUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="notice file path"
            android:textColor="#303F9F"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

</android.support.v7.widget.CardView>